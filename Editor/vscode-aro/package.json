{
  "name": "aro-language",
  "displayName": "ARO Language",
  "description": "Language support for ARO - Action Result Object programming language",
  "version": "1.2.0",
  "publisher": "arolang",
  "repository": {
    "type": "git",
    "url": "https://github.com/arolang/aro"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "aro",
    "action-result-object",
    "dsl",
    "business-logic"
  ],
  "icon": "images/aro-icon.png",
  "contributes": {
    "languages": [
      {
        "id": "aro",
        "aliases": [
          "ARO",
          "aro"
        ],
        "extensions": [
          ".aro"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "aro",
        "scopeName": "source.aro",
        "path": "./syntaxes/aro.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "aro",
        "path": "./snippets/aro.code-snippets"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ARO Language",
      "properties": {
        "aro.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the ARO Language Server for advanced features"
        },
        "aro.lsp.path": {
          "type": "string",
          "default": "aro",
          "description": "Path to the ARO executable. If not absolute, it will be looked up in PATH."
        },
        "aro.lsp.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for the language server"
        }
      }
    },
    "commands": [
      {
        "command": "aro.restartServer",
        "title": "ARO: Restart Language Server",
        "category": "ARO"
      },
      {
        "command": "aro.openSettings",
        "title": "ARO: Open Settings",
        "category": "ARO"
      },
      {
        "command": "aro.configureLspPath",
        "title": "ARO: Configure Language Server Path",
        "category": "ARO"
      }
    ],
    "configurationDefaults": {
      "[aro]": {
        "editor.semanticHighlighting.enabled": false
      },
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "name": "ARO REQUEST Actions (Extract, Parse, Retrieve, etc.)",
            "scope": "keyword.action.request.aro",
            "settings": {
              "foreground": "#0078D4",
              "fontStyle": "bold"
            }
          },
          {
            "name": "ARO OWN Actions (Compute, Validate, Transform, etc.)",
            "scope": "keyword.action.own.aro",
            "settings": {
              "foreground": "#8B5CF6",
              "fontStyle": "bold"
            }
          },
          {
            "name": "ARO RESPONSE Actions (Return, Throw)",
            "scope": "keyword.action.response.aro",
            "settings": {
              "foreground": "#D97706",
              "fontStyle": "bold"
            }
          },
          {
            "name": "ARO EXPORT Actions (Store, Log, Send, Emit, etc.)",
            "scope": "keyword.action.export.aro",
            "settings": {
              "foreground": "#059669",
              "fontStyle": "bold"
            }
          },
          {
            "name": "ARO LIFECYCLE Actions (Start, Stop, Keepalive, etc.)",
            "scope": "keyword.action.lifecycle.aro",
            "settings": {
              "foreground": "#0891B2",
              "fontStyle": "bold"
            }
          },
          {
            "name": "ARO TEST Actions (Given, When, Then, Assert)",
            "scope": "keyword.action.test.aro",
            "settings": {
              "foreground": "#CA8A04",
              "fontStyle": "bold"
            }
          },
          {
            "name": "ARO Variables",
            "scope": "variable.other.aro",
            "settings": {
              "foreground": "#E06C75"
            }
          },
          {
            "name": "ARO Variable Qualifiers",
            "scope": "variable.other.qualifier.aro",
            "settings": {
              "foreground": "#E06C75",
              "fontStyle": "italic"
            }
          },
          {
            "name": "ARO Feature Set Name",
            "scope": "entity.name.function.featureset.aro",
            "settings": {
              "foreground": "#61AFEF",
              "fontStyle": "bold"
            }
          },
          {
            "name": "ARO Business Activity",
            "scope": "entity.name.type.business-activity.aro",
            "settings": {
              "foreground": "#98C379"
            }
          },
          {
            "name": "ARO Handler/Observer Keyword",
            "scope": "storage.type.handler.aro",
            "settings": {
              "foreground": "#C678DD",
              "fontStyle": "italic"
            }
          },
          {
            "name": "ARO Status Codes",
            "scope": "constant.language.status.aro",
            "settings": {
              "foreground": "#56B6C2"
            }
          },
          {
            "name": "ARO Prepositions",
            "scope": "keyword.other.preposition.aro",
            "settings": {
              "foreground": "#ABB2BF"
            }
          },
          {
            "name": "ARO Articles",
            "scope": "keyword.other.article.aro",
            "settings": {
              "foreground": "#ABB2BF"
            }
          },
          {
            "name": "ARO Control Keywords",
            "scope": "keyword.control.aro",
            "settings": {
              "foreground": "#C678DD"
            }
          },
          {
            "name": "ARO Strings",
            "scope": "string.quoted.double.aro",
            "settings": {
              "foreground": "#98C379"
            }
          },
          {
            "name": "ARO Numbers",
            "scope": "constant.numeric.aro",
            "settings": {
              "foreground": "#D19A66"
            }
          },
          {
            "name": "ARO Comments",
            "scope": "comment.block.aro",
            "settings": {
              "foreground": "#7F848E",
              "fontStyle": "italic"
            }
          },
          {
            "name": "ARO Operators",
            "scope": "keyword.operator.aro, keyword.operator.logical.aro",
            "settings": {
              "foreground": "#56B6C2"
            }
          }
        ]
      }
    }
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:aro"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && NODE_OPTIONS='--no-experimental-strip-types' mocha out/test/**/*.test.js"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.0.0",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.0",
    "@types/vscode": "^1.74.0",
    "mocha": "^10.0.0",
    "proxyquire": "^2.1.3",
    "sinon": "^17.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  }
}
