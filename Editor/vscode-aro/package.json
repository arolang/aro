{
  "name": "aro-language",
  "displayName": "ARO Language",
  "description": "Language support for ARO - Action Result Object programming language",
  "version": "1.1.0",
  "publisher": "krissimon",
  "repository": {
    "type": "git",
    "url": "https://github.com/krissimon/aro"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "aro",
    "action-result-object",
    "dsl",
    "business-logic"
  ],
  "icon": "images/aro-icon.png",
  "contributes": {
    "languages": [
      {
        "id": "aro",
        "aliases": ["ARO", "aro"],
        "extensions": [".aro"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "aro",
        "scopeName": "source.aro",
        "path": "./syntaxes/aro.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "aro",
        "path": "./snippets/aro.code-snippets"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ARO Language",
      "properties": {
        "aro.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the ARO Language Server for advanced features"
        },
        "aro.lsp.path": {
          "type": "string",
          "default": "aro",
          "description": "Path to the ARO executable. If not absolute, it will be looked up in PATH."
        },
        "aro.lsp.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for the language server"
        }
      }
    }
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:aro"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  }
}
