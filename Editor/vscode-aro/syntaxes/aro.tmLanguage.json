{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ARO",
  "scopeName": "source.aro",
  "patterns": [
    { "include": "#comments" },
    { "include": "#featureset" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#actions" },
    { "include": "#results" },
    { "include": "#objects" },
    { "include": "#prepositions" },
    { "include": "#articles" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.aro",
          "begin": "\\(\\*",
          "end": "\\*\\)",
          "patterns": [
            {
              "name": "comment.block.aro",
              "match": "."
            }
          ]
        }
      ]
    },
    "featureset": {
      "patterns": [
        {
          "name": "meta.featureset.aro",
          "begin": "\\(([^:]+):\\s*([^)]+)\\)",
          "beginCaptures": {
            "1": { "name": "entity.name.function.featureset.aro" },
            "2": { "name": "entity.name.type.business-activity.aro" }
          },
          "end": "(?=\\()|$",
          "patterns": [
            { "include": "#featureset-body" }
          ]
        }
      ]
    },
    "featureset-body": {
      "patterns": [
        {
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            { "include": "#comments" },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#keywords" },
            { "include": "#actions" },
            { "include": "#results" },
            { "include": "#objects" },
            { "include": "#prepositions" },
            { "include": "#articles" },
            { "include": "#operators" }
          ]
        }
      ]
    },
    "actions": {
      "patterns": [
        {
          "name": "support.function.action.compute.aro",
          "match": "<(Compute)>",
          "comment": "Compute action - very prominent/markant"
        },
        {
          "name": "entity.name.function.action.request.aro",
          "match": "<(Extract|Parse|Retrieve|Fetch|Accept)>",
          "comment": "Request actions - bright color"
        },
        {
          "name": "entity.name.function.action.own.aro",
          "match": "<(Create|Validate|Compare|Transform|Set|Merge)>",
          "comment": "Own actions - bright color"
        },
        {
          "name": "entity.name.function.action.response.aro",
          "match": "<(Return|Throw|Send|Log|Store|Write|Emit)>",
          "comment": "Response actions - bright color"
        },
        {
          "name": "entity.name.function.action.test.aro",
          "match": "<(Given|When|Then|Assert)>",
          "comment": "Test actions - bright color"
        },
        {
          "name": "entity.name.function.action.lifecycle.aro",
          "match": "<(Start|Stop|Keepalive|Watch)>",
          "comment": "Lifecycle actions - bright color"
        }
      ]
    },
    "results": {
      "patterns": [
        {
          "name": "variable.parameter.result.aro",
          "match": "<([a-zA-Z][a-zA-Z0-9-]*)(?::\\s*([a-zA-Z][a-zA-Z0-9-]*))?>",
          "comment": "Results - bright color"
        }
      ]
    },
    "objects": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.object.aro",
          "match": "(?<=from|to|with|for|into|on)\\s+(?:the|a|an)?\\s*<([^>]+)>",
          "comment": "Objects - bright color"
        }
      ]
    },
    "prepositions": {
      "patterns": [
        {
          "name": "storage.modifier.preposition.aro",
          "match": "\\b(from|to|with|for|into|on|where)\\b",
          "comment": "Prepositions - darker color"
        }
      ]
    },
    "articles": {
      "patterns": [
        {
          "name": "keyword.other.article.aro",
          "match": "\\b(the|a|an)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.aro",
          "match": "\\b(match|when|for|each|in|if|else|repeat|until|while)\\b"
        },
        {
          "name": "keyword.other.publish.aro",
          "match": "\\b(Publish)\\b"
        },
        {
          "name": "constant.language.status.aro",
          "match": "<(OK|Created|Accepted|NoContent|BadRequest|Unauthorized|Forbidden|NotFound|Error):\\s*status>"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.aro",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.aro",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.aro",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.aro",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.aro",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.comparison.aro",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.aro",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "keyword.operator.assignment.aro",
          "match": "="
        }
      ]
    }
  }
}
