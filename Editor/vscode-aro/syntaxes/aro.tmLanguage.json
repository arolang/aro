{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ARO",
  "scopeName": "source.aro",
  "patterns": [
    { "include": "#comments" },
    { "include": "#featureset" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#status-codes" },
    { "include": "#actions" },
    { "include": "#variables" },
    { "include": "#prepositions" },
    { "include": "#articles" },
    { "include": "#keywords" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.aro",
          "begin": "\\(\\*",
          "end": "\\*\\)"
        }
      ]
    },
    "featureset": {
      "patterns": [
        {
          "name": "meta.featureset.aro",
          "begin": "\\(([^:]+):\\s*([^)<]+?)(\\s+Handler|\\s+Observer)?(<[^>]+>)?\\s*\\)",
          "beginCaptures": {
            "1": { "name": "entity.name.function.featureset.aro" },
            "2": { "name": "entity.name.type.business-activity.aro" },
            "3": { "name": "storage.type.handler.aro" },
            "4": { "name": "meta.state-guard.aro", "patterns": [{ "include": "#state-guard" }] }
          },
          "end": "(?=\\()|$",
          "patterns": [
            { "include": "#featureset-body" }
          ]
        }
      ]
    },
    "state-guard": {
      "patterns": [
        {
          "match": "<([a-zA-Z][a-zA-Z0-9-]*)(?::([^,>]+))?>",
          "captures": {
            "1": { "name": "variable.other.aro" },
            "2": { "name": "constant.other.aro" }
          }
        }
      ]
    },
    "featureset-body": {
      "patterns": [
        {
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            { "include": "#comments" },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#status-codes" },
            { "include": "#actions" },
            { "include": "#variables" },
            { "include": "#prepositions" },
            { "include": "#articles" },
            { "include": "#keywords" },
            { "include": "#operators" }
          ]
        }
      ]
    },
    "actions": {
      "patterns": [
        {
          "name": "keyword.action.request.aro",
          "match": "<(Extract|Parse|Retrieve|Fetch|Read|Accept|List|Stat|Exists|Parameters)>",
          "comment": "REQUEST actions - data coming IN"
        },
        {
          "name": "keyword.action.own.aro",
          "match": "<(Compute|Validate|Compare|Create|Transform|Filter|Match|Split|Set|Merge|Copy|Move|Append|Render)>",
          "comment": "OWN actions - internal processing"
        },
        {
          "name": "keyword.action.response.aro",
          "match": "<(Return|Throw)>",
          "comment": "RESPONSE actions - data going OUT"
        },
        {
          "name": "keyword.action.export.aro",
          "match": "<(Publish|Store|Log|Send|Emit|Write|CreateDirectory)>",
          "comment": "EXPORT actions - persistence/external"
        },
        {
          "name": "keyword.action.lifecycle.aro",
          "match": "<(Start|Stop|Keepalive|Watch|Configure|Request|Connect|Disconnect|Broadcast)>",
          "comment": "LIFECYCLE actions - system management"
        },
        {
          "name": "keyword.action.test.aro",
          "match": "<(Given|When|Then|Assert)>",
          "comment": "TEST actions - BDD testing"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.aro",
          "match": "<[a-zA-Z][a-zA-Z0-9-]*(:\\s*[a-zA-Z][a-zA-Z0-9-]*)?>",
          "comment": "Variables with optional qualifier - entire <var> or <var: qual> is one token"
        }
      ]
    },
    "status-codes": {
      "patterns": [
        {
          "name": "constant.language.status.aro",
          "match": "<(OK|Created|Accepted|NoContent|BadRequest|Unauthorized|Forbidden|NotFound|Error|InternalError):\\s*status>"
        }
      ]
    },
    "prepositions": {
      "patterns": [
        {
          "name": "keyword.other.preposition.aro",
          "match": "\\b(from|to|with|for|into|on|where|against|as)\\b"
        }
      ]
    },
    "articles": {
      "patterns": [
        {
          "name": "keyword.other.article.aro",
          "match": "\\b(the|a|an)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.aro",
          "match": "\\b(match|when|for|each|in|if|else|repeat|until|while)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.aro",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.aro",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.aro",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.aro",
          "match": "(==|!=|<=|>=)"
        },
        {
          "name": "keyword.operator.arithmetic.aro",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.assignment.aro",
          "match": "(?<![<>])=(?![=])"
        },
        {
          "name": "keyword.operator.logical.aro",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    }
  }
}
