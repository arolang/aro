{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ARO",
  "scopeName": "source.aro",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#status-codes" },
    { "include": "#request-actions" },
    { "include": "#own-actions" },
    { "include": "#response-actions" },
    { "include": "#export-actions" },
    { "include": "#lifecycle-actions" },
    { "include": "#test-actions" },
    { "include": "#featureset-header" },
    { "include": "#variables" },
    { "include": "#prepositions" },
    { "include": "#articles" },
    { "include": "#keywords" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.aro",
          "begin": "\\(\\*",
          "end": "\\*\\)"
        }
      ]
    },
    "featureset-header": {
      "patterns": [
        {
          "match": "\\(([^:]+):\\s*([^)]+)\\)",
          "captures": {
            "1": { "name": "entity.name.function.aro" },
            "2": { "name": "entity.name.type.aro" }
          }
        }
      ]
    },
    "request-actions": {
      "patterns": [
        {
          "name": "entity.name.tag.aro",
          "match": "\\b(Extract|Parse|Retrieve|Fetch|Read|Accept|List|Stat|Exists|Parameters)\\b"
        }
      ]
    },
    "own-actions": {
      "patterns": [
        {
          "name": "storage.type.aro",
          "match": "\\b(Compute|Validate|Compare|Create|Transform|Filter|Match|Split|Set|Merge|Copy|Move|Append|Render)\\b"
        }
      ]
    },
    "response-actions": {
      "patterns": [
        {
          "name": "constant.language.aro",
          "match": "\\b(Return|Throw)\\b"
        }
      ]
    },
    "export-actions": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.aro",
          "match": "\\b(Publish|Store|Log|Send|Emit|Write|CreateDirectory)\\b"
        }
      ]
    },
    "lifecycle-actions": {
      "patterns": [
        {
          "name": "support.function.aro",
          "match": "\\b(Start|Stop|Keepalive|Watch|Configure|Request|Connect|Disconnect|Broadcast)\\b"
        }
      ]
    },
    "test-actions": {
      "patterns": [
        {
          "name": "markup.heading.aro",
          "match": "\\b(Given|When|Then|Assert)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.aro",
          "match": "<[a-zA-Z][a-zA-Z0-9-]*(?::[^>]+)?>"
        }
      ]
    },
    "status-codes": {
      "patterns": [
        {
          "name": "support.constant.aro",
          "match": "<(?:OK|Created|Accepted|NoContent|BadRequest|Unauthorized|Forbidden|NotFound|Error|InternalError):\\s*status>"
        }
      ]
    },
    "prepositions": {
      "patterns": [
        {
          "name": "keyword.other.aro",
          "match": "\\b(?:from|to|with|for|into|on|where|against|as)\\b"
        }
      ]
    },
    "articles": {
      "patterns": [
        {
          "name": "keyword.other.aro",
          "match": "\\b(?:the|a|an)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.aro",
          "match": "\\b(?:match|when|for|each|in|if|else|repeat|until|while)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.aro",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.aro",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.aro",
          "match": "\\b[0-9]+(?:\\.[0-9]+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.aro",
          "match": "==|!=|<=|>=|[+\\-*/%]|\\b(?:and|or|not)\\b"
        }
      ]
    }
  }
}
